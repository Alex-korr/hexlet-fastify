extends ../layouts/main.pug

block content
  .row
    .col-md-8.mx-auto
      .d-flex.justify-content-between.align-items-center.mb-4
        h1 üë§ User Profile
        .btn-group
          a.btn.btn-primary(href=routes.editUserPath(user.id)) Edit
          a.btn.btn-outline-secondary(href=routes.usersPath()) ‚Üê Back to List
      
      .card
        .card-body
          .row
            .col-md-4
              .text-center.mb-3
                .bg-primary.text-white.rounded-circle.mx-auto.d-flex.align-items-center.justify-content-center(style="width: 100px; height: 100px; font-size: 2rem;")
                  | #{user.name.charAt(0).toUpperCase()}
            
            .col-md-8
              table.table.table-borderless
                tbody
                  tr
                    th(scope="row", style="width: 30%;") ID:
                    td #{user.id}
                  tr
                    th(scope="row") Name:
                    td #{user.name}
                  tr
                    th(scope="row") Email:
                    td
                      a(href=`mailto:${user.email}`) #{user.email}
                  tr
                    th(scope="row") Password:
                    td
                      span.text-muted ‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢‚Ä¢
      
      .mt-4
        .card.border-danger
          .card-header.bg-danger.text-white
            h5.mb-0 ‚ö†Ô∏è Danger Zone
          .card-body
            p.text-muted Delete this user permanently. This action cannot be undone.
            form.d-inline(action=routes.userPath(user.id), method='post')
              input(type='hidden', name='_method', value='DELETE')
              button.btn.btn-danger(type='submit', onclick="return confirm('Are you sure you want to delete this user?')") Delete User