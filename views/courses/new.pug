extends ../layouts/main.pug

block content
  .row
    .col-md-6.mx-auto
      h1.mb-4 📝 Create New Course
      
      // Display error message if validation failed
      if error
        .alert.alert-danger.mb-3
          strong Validation Error:
          br
          = error.message
      
      form(action='/courses', method='post')
        .mb-3
          label.form-label Course Title:
          input.form-control(type='text', name='title', placeholder='Enter course title', value=title, required)
        
        .mb-3
          label.form-label Course Description:
          textarea.form-control(name='description', rows='4', placeholder='Enter course description (minimum 10 characters)', required)= description
        
        .d-grid
          button.btn.btn-primary.btn-lg(type='submit') 🚀 Create Course
        
        .text-center.mt-3
          a(href='/courses') ← Back to course list